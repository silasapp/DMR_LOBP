

@model  IEnumerable<LOBP.Models.PermitModels>
@using System.Globalization;

@{
    ViewBag.Title = "View LTO";
    Layout = null;
    DateTime date = DateTime.ParseExact("20/10/2021", "dd/MM/yyyy", CultureInfo.InvariantCulture);
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>


    <style type="text/css">
    </style>
</head>
<body>
    <div style="width: 1240px; height: 1810px; margin: 0px auto;box-sizing: border-box; padding: 0px; position: relative;">
        <div style="width: 100%; text-align: center; position: absolute; top: 50%; margin-top: -400px;">
            @if (Convert.ToDateTime(Model.FirstOrDefault().permitmodels.FirstOrDefault().IssuedDate) >= date || (Model.FirstOrDefault().permitmodels.FirstOrDefault().IssuedDate) == Convert.ToDateTime(null).ToString("MMMM dd, yyyy"))
            {
                <img src="~/images/waterMark2.png" style="width: 820px; width: 920px;" />
            }
            else
            {
                <img src="~/images/waterMark.png" style="width: 820px; width: 920px;" />
            }
        </div>
        <div style="border: 10px solid #101010; padding: 50px 67px; font-family: 'Times New Roman'; position: relative; height: 100%; box-sizing: border-box;">
            <div style="text-align: center;">
                @if (Convert.ToDateTime(Model.FirstOrDefault().permitmodels.FirstOrDefault().IssuedDate) >= date || (Model.FirstOrDefault().permitmodels.FirstOrDefault().IssuedDate) == Convert.ToDateTime(null).ToString("MMMM dd, yyyy"))
                {
                    <img src="~/Images/nmdpra.png" style="width:180px; margin-top:15px; margin-bottom:7px;" />
                }
                else
                {
                    <img src="~/Images/coat_of_arm.jpg" style="width:180px; margin-top:15px; margin-bottom:7px;" />
                }                <div>
                    <h2 style="margin: 0; margin-top:10px;font-size: 2.1em">FEDERAL REPUBLIC OF NIGERIA</h2>
                    <h2 style="margin: 0; margin-top: 5px;font-size: 2.1em">PETROLEUM DECREE 1969</h2>

                    <h1 style="margin: 0; font-size: 2.0em; color:#de1433;">
                        Lubricant Filling Plant Operating License
                    </h1>

                </div>
            </div>

            <div style="padding: 0px; position: absolute; top: 430px; left: 97px; right: 97px;">

                <div style="float: right; width:480px; font-size:1.5em;">
                    <div style="padding-top: 0;">
                        <div style="width: 140px; float: left;">License No:</div>
                        <div style="border-bottom:2px dotted #888; width:340px; float:left; padding-left: 0px;  text-align:right;font-weight:bold;">@Model.FirstOrDefault().permitmodels.FirstOrDefault().LicenseNumber&nbsp;</div>
                        <div style="clear:both;"></div>
                    </div>


                    <div style="font-size: 0.9em; padding-top: 0; margin-top: 18px;">
                        <div style="width: 350px; float: left;">Company Identification Code:</div>
                        <div style="border-bottom: 2px dotted #888; float: left; padding-left: 10px;  text-align: left; font-size: 18px; font-weight: bold;">@Model.FirstOrDefault().permitmodels.FirstOrDefault().CompanyIdentity&nbsp;</div>
                        <div style="clear: both;"></div>
                    </div>



                </div>
                <div style="clear: both;"></div>
            </div>


            <div style="padding: 0px; position: absolute; box-sizing: border-box; top: 555px; left: 97px; right: 97px;">
                <table style="width: 100%; border-spacing: 0; position: relative; margin-top: 0px; font-size: 26px;">
                    <tr>
                        <td style="border-bottom: 2px dotted #888;padding: 5px 0 0;" colspan="3">
                            <div style="display: inline-block; margin-bottom: -3px; background-color: #fff;padding: 5px 10px 5px 0;">
                                This License is granted to:
                            </div>
                            <span style="font-weight: bold; font-style: italic; font-size:25px;" id="facLine1">@Model.FirstOrDefault().permitmodels.FirstOrDefault().CompanyName</span>
                        </td>
                    </tr>

                    <tr>
                        <td style=" border-bottom: 2px dotted #888;padding: 8px 0 5px 0;" colspan="3">
                            &nbsp; &nbsp;&nbsp; &nbsp;<span style="font-weight: bold; font-style: italic;font-size: 34px;" id="facLine2"></span>
                        </td>
                    </tr>

                    <tr>
                        <td style=" border-bottom: 2px dotted #888;padding: 5px 0 0;" colspan="3">
                            <div style="display: inline-block; margin-bottom: -3px; background-color: #fff;padding: 5px 10px 5px 0;">
                                of
                            </div>
                            &nbsp; &nbsp;
                            <span style="font-weight: bold;font-size: 25PX;" id="coynameLine1">
                                @Model.FirstOrDefault().permitmodels.FirstOrDefault().RegisteredAddress
                            </span>
                        </td>
                    </tr>
                    <tr>
                        <td style=" border-bottom: 2px dotted #888;padding: 8px 0 5px 0;" colspan="3">
                            &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;<span style="font-weight: bold;font-size: 34px;" id="coynameLine2"></span>
                        </td>
                    </tr>
                    <tr>
                        <td style=" border-bottom: 2px dotted #888;padding: 5px 0 0;" colspan="3">
                            <div style="display: inline-block; margin-bottom: -3px; background-color: #fff;padding: 5px 10px 5px 0;">
                                For operating a Lubricant Filling Plant of
                            </div>
                            <div style="display: inline-block;" id="storeLine1">
                                <span style="font-weight: bold;font-size: 22px;" id="facAddress1">&nbsp; @Model.FirstOrDefault().permitmodels.FirstOrDefault().Capacity Litres</span>
                            </div>
                        </td>
                    </tr>


                    <tr>
                        <td style="text-align: center; font-size:0.8em;" colspan="3">Capacity</td>
                    </tr>
                    <tr>
                        <td colspan="2">&nbsp;</td>
                    </tr>
                    <tr>
                        <td style=" border-bottom: 2px dotted #888;padding: 5px 0 0;" colspan="3">
                            <div style="display: inline-block; margin-bottom:-3px; background-color:#fff; padding: 5px 10px 5px 0;">
                                at
                            </div><span style="font-weight: bold;font-size: 22px;" id="facAddress1">&nbsp; @Model.FirstOrDefault().permitmodels.FirstOrDefault().LocationAddress</span>
                        </td>
                    </tr>
                    <tr>
                        <td style=" border-bottom: 2px dotted #888;padding: 8px 0 5px 0;" colspan="3">
                            &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;<span style="font-weight: bold;font-size: 34px;" id="coynameLine2"></span>
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align: center; font-size: 18px;" colspan="3">(Location)</td>
                    </tr>
                    <tr>
                        <td colspan="3">&nbsp;</td>
                    </tr>
                    <tr>
                        <td colspan="3" style="font-size:26px;">

                            <p>
                                This License is issued subject to the Petroleum Act 1969 and to the regulations thereunder now in force or which may come into force during the validity period of this License.
                            </p>


                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">&nbsp;</td>
                    </tr>
                    <tr>
                        <td style=" padding: 5px 0 0; border-bottom: 2px dotted #888;">
                            <div style="display: inline-block; margin-bottom: -3px; background-color:#fff; padding:  5px 10px 5px 0;">
                                Dated
                            </div>
                            <b style="font-weight: bold;font-size: 22px;">@Model.FirstOrDefault().permitmodels.FirstOrDefault().IssuedDay</b>
                        </td>
                        <td style=" padding: 5px 0 0; border-bottom:2px dotted #888;">
                            <div style="display: inline-block; margin-bottom: -3px; background-color:#fff; padding:  5px 10px 5px 0;">
                                &nbsp; &nbsp; Day of
                            </div>
                            <b style="font-weight: bold;font-size: 22px;">@Model.FirstOrDefault().permitmodels.FirstOrDefault().IssuedMonth</b>
                        </td>
                        <td style=" padding: 5px 0 0; border-bottom:2px dotted #888;">
                            <span style="display: inline-block; margin-bottom: -3px; background-color:#fff; padding:5px 10px 5px 0; margin-right:90px">
                                Year
                            </span>
                            <b style="font-weight: bold;font-size:22px;">@Model.FirstOrDefault().permitmodels.FirstOrDefault().IssuedYear</b>
                        </td>
                    </tr>
                    <tr>
                        <td style=" border-bottom: 2px dotted #888;padding:5px 0 0;" colspan="2">
                            <div style="display: inline-block; margin-bottom:-3px; background-color:#fff;padding:5px 10px 5px 0;">
                                FEE ₦:
                            </div>
                            <span style="font-weight: bold;font-size: 22px;" id="fee1"> @string.Format("{0:N}", Model.FirstOrDefault().permitmodels.FirstOrDefault().Amountpaid) </span>
                        </td>

                        <td style=" border-bottom: 2px dotted #888;padding:5px 0 0;" colspan="2">
                            <div style="display: inline-block; margin-bottom:-3px; background-color:#fff;padding:5px 10px 5px 0;">
                                EXPIRY DATE:
                            </div>
                            <span style="font-weight: bold;font-size: 22px" id="expdate">31st DECEMBER, @Model.FirstOrDefault().permitmodels.FirstOrDefault().ExpiryYear </span>
                        </td>
                    </tr>


                </table>
                <br />

                <table style="width: 100%; position: relative;">
                    <tr style="height: 180px; margin-top: 0px;">
                        <td style="vertical-align: bottom;">
                            <div class="center">
                                <img style="height:150px" src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model.FirstOrDefault().permitmodels.FirstOrDefault().QrCode))" />

                                <div style="font-size: 1.5em;" id="cateName">Lubricant Filling Plant</div>
                            </div>
                        </td>
                        <td>
                            <div style="text-align: right; max-width: 390px; float: right; height: 180px; position: relative;">
                                <div style="position: relative; height: 185px; margin-top:80px">
                                    <img src="@Url.Content(Model.FirstOrDefault().permitmodels.FirstOrDefault().Signature)" style="height: 125px;" />
                                </div>
                                @if (Convert.ToDateTime(Model.FirstOrDefault().permitmodels.FirstOrDefault().IssuedDate) >= date || (Model.FirstOrDefault().permitmodels.FirstOrDefault().IssuedDate) == Convert.ToDateTime(null).ToString("MMMM dd, yyyy"))
                                {
                                    <div style="height: 20px; font-size:2em; text-align:center; margin-bottom: 0; width: 390px; right: 0; border-top: 2px dotted #888; position: absolute; bottom: 0;">Authority Chief Excutive, NMDPRA</div>
                                }
                                else
                                {
                                    <div style="height: 20px; font-size:2em; text-align:center; margin-bottom: 0; width: 390px; right: 0; border-top: 2px dotted #888; position: absolute; bottom: 0;">Honorable Minister of Petroleum Resources</div>
                                }
                            </div>
                            <div style="clear: both;"></div>
                        </td>
                    </tr>
                </table>


            </div>

        </div>
    </div>
</body>
</html>
<style>

    #List1 li {
        display: inline-block;
        text-align: left;
    }

    #divPermitPreview {
        background-image: url('../../Images/waterMark.png');
        background-repeat: no-repeat;
        background-position: center;
        background-size: contain;
    }
</style>

