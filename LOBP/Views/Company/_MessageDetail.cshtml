<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title text-center">
        @ViewBag.Title 
    </h4>
</div>

<div class="modal-body">

    <form class="form-horizontal">

        <div class="form-group">
            <label class="control-label col-md-3">License Type</label>
            <div class="col-md-9">
                <input type="text" class="form-control" value="@ViewBag.AppDescription" readonly style="border: 0px;">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Application Reference</label>
            <div class="col-md-9">
                <input type="text" class="form-control" value="@ViewBag.ApplicationId" readonly style="border: 0px;">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Transaction Date</label>
            <div class="col-md-9">
                <input type="text" class="form-control" value="@ViewBag.MessageDate" readonly style="border: 0px;">
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-3">Message</label>
            <div class="col-md-9">
                <textarea class="form-control" rows="3" id="comment" name="comment" readonly style="border: 0px;">@ViewBag.Message</textarea>
            </div>
        </div>

    </form>
    <div class="modal-footer">
        <button class="btn btn-default" data-dismiss="modal">Close</button>
        @if (ViewBag.Title == "Application Document Correction")
                {
            <a class="btn btn-warning" href="@Url.Action("ApplicationForm", new { ApplicationId = ViewBag.ApplicationId, LicenseType = ViewBag.LicenseTypeCode })">Fix App</a>
                }
    </div>
</div>
