@model  List<LOBP.Models.FacilityInfo>
    @{
        ViewBag.Title = "UpdateFacilityInfo";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";

    }

    <div class="content">



        <div class="modal fade updaterecordmodal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="calenderModalLabel">
            <div class="modal-dialog modal" style="vertical-align: middle; margin:0 auto 0 30%; overflow-y:hidden; overflow-x:hidden; display:block; margin-top:50px" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title text-success" id="exampleModalLabel"><span class="glyphicon glyphicon-hand-down"></span> Update Facility Record</h4>
                    </div>

                    <div class="modal-body">
                        <div class="form-horizontal">

                            <div class="row">
                                <div class="col-md-12">

                                    <div class="col-sm-6">
                                        <label>Company Name</label>
                                        <div class="form-group">
                                            <div class="col-sm-10">
                                                <input id="CompanyName" name="CompanyName" type="text" readonly />
                                                <input id="FacilityId" name="FacilityId" type="hidden" />
                                                <input id="apprequestid" name="apprequestid" type="hidden" />
                                            </div>
                                        </div>

                                        <label>Company Email</label>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <input type="text" id="CompanyEmail" name="CompanyEmail" class="form-control" />
                                            </div>
                                        </div>

                                        <label>Facility Address</label>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <input type="text" id="Facaddress" name="Facaddress" class="form-control" />
                                            </div>
                                        </div>

                                        <label>Annual Base Oil Capacity</label>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <input type="text" id="storagecapacity" name="storagecapacity" class="form-control" />
                                            </div>
                                        </div>
                                        <label>Storage Capacity</label>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <input type="text" id="capacitystorage" name="capacitystorage" class="form-control" />
                                            </div>
                                        </div>

                                        @if (ViewBag.UserLoginEmail == "SUPERADMIN" || ViewBag.UserLoginEmail == "SUPPORT")
                                        {
                                            <label>Current Desk Email</label>
                                            <div class="form-group">
                                                <div class="col-md-10">
                                                    <input type="text" id="CurrentStaffDesk" name="CurrentStaffDesk" class="form-control" />
                                                </div>
                                            </div>

                                            <label>State Code</label>
                                            <div class="form-group">
                                                <div class="col-md-10">
                                                    <input type="text" id="StateCode" required name="StateCode" class="form-control" />
                                                </div>
                                            </div>

                                            <label>LGA Code</label>
                                            <div class="form-group">
                                                <div class="col-md-10">
                                                    <input type="text" id="LGACode" required name="LGACode" class="form-control" />
                                                </div>
                                            </div>

                                            <label>Status</label>
                                            <div class="form-group">
                                                <div class="col-md-10">
                                                    <input id="status" name="status" type="text" />
                                                </div>
                                            </div>

                                        }
                                    </div>
                                    <div class="col-sm-6">

                                        <label>Facility Name</label>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <input type="text" id="FacilityName" name="FacilityName" class="form-control" />
                                            </div>
                                        </div>


                                        <div><label class="control-label">Application Ref</label></div>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <input type="text" id="ApplicationId" name="ApplicationId" readonly class="form-control" />

                                            </div>
                                        </div>


                                        <label>GPS Coordinate</label>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <input type="text" id="Gps" name="Gps" class="form-control" />
                                            </div>
                                        </div>



                                        @if (ViewBag.UserLoginEmail == "SUPERADMIN" || ViewBag.UserLoginEmail == "SUPPORT")
                                        {
                                            <div><label class="control-label">Current StageId</label></div>
                                            <div class="form-group">
                                                <div class="col-md-10">
                                                    <input type="text" id="CurrentStageId" name="CurrentStageId" class="form-control" />

                                                </div>
                                            </div>
                                            <label>License Issues Date</label>
                                            <div class="form-group">
                                                <div class="col-md-10">
                                                    <input type="email" id="LicenseIssuedDate" name="LicenseIssuedDate" class="form-control" />
                                                </div>
                                            </div>


                                            <label>License Expiry Date</label>
                                            <div class="form-group">
                                                <div class="col-md-10">
                                                    <input type="email" id="LicenseExpiryDate" name="LicenseExpiryDate" class="form-control" />
                                                </div>
                                            </div>


                                            <label>License Reference</label>
                                            <div class="form-group">
                                                <div class="col-md-10">
                                                    <input type="text" id="LicenseReference" required name="LicenseReference" class="form-control" />
                                                </div>
                                            </div>

                                            <label>Application Category</label>
                                            <div class="form-group">
                                                <div class="col-md-10">
                                                    <input type="text" id="Appcat" required name="Appcat" class="form-control" />
                                                </div>
                                            </div>

                                            <label>Current Office LocationId</label>
                                            <div class="form-group">
                                                <div class="col-md-10">
                                                    <input id="CurrentOfficeLocationId" name="CurrentOfficeLocationId" type="text" />
                                                </div>
                                            </div>
                                            <label>Quarter</label>
                                            <div class="form-group">
                                                <div class="col-md-10">
                                                    <input id="quarter" name="quarter" type="number" />
                                                </div>
                                            </div>


                                        }



                                    </div>



                                    @*</div>*@
                                </div>
                            </div>
                        </div>
                       

                        <span style="margin-left:200px"> <button class="btn btn-success" id="facupdaterecord"><span class="glyphicon glyphicon-save"></span> Update Record</button></span>

                    </div>

                </div>
            </div>
        </div>





        <div class="row">
            <div class="col-md-12" style="background-color:white">
                <fieldset class="scheduler-border">
                    <legend class="scheduler-border">Facility Information</legend>
                    <table class="table table-striped table-condensed table-responsive table-bordered customDT" id="mytable">
                        <thead>
                            <tr>
                                <th><strong>Application Ref</strong>
                                <th><strong>Company Name</strong> </th>
                                <th><strong>Facility Name</strong></th>
                                <th><strong>Company Email</strong></th>
                                <th><strong>Category</strong></th>
                                <th><strong>Annual Base Oil Capacity</strong></th>
                                <th><strong>Storage Capacity</strong></th>
                                <th><strong>Description</strong></th>
                                <th><strong>Applied Date</strong></th>
                                <th><strong>License Reference</strong></th>
                                <th><strong>LGA Code</strong></th>
                                <th><strong>State Code</strong></th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (LOBP.Models.FacilityInfo n in Model)
                            {
                            <tr id="@("refresh_" + n.ApplicationID)">
                                <td>@n.ApplicationID</td>
                                <td>@n.CompanyName</td>
                                <td>@n.FacilityName</td>
                                <td>@n.CompanyEmail</td>
                                <td>@n.Category</td>
                                <td>@n.AnnualStorageCapacity</td>
                                <td>@n.StorageCapacity</td>
                                <td>@n.Description</td>
                                <td>@n.AppliedDate</td>
                                <td>@n.LicenseReference</td>
                                <td>@n.LGACode</td>
                                <td>@n.StateCode</td>
                                <td><button class="btn btn-success btn-xs" onclick='FacilityJs("@n.ApplicationID", "@n.CompanyEmail", "@n.CompanyName", "@n.FacilityName", "@n.FacilityId", "@n.AplicationCodeType", "@n.LocationAddress", "@n.GPS", "@n.AnnualStorageCapacity", "@n.LicenseExpiryDate", "@n.LicenseIssuedDate", "@n.CurrentDeskEmail", "@n.CurrentDeskId", "@n.LicenseReference", "@n.LGACode", "@n.StateCode", "@n.ApplicationCategory", "@n.CurrentOfficeLocationId", "@n.ApplicationRequestId", "@n.Action", "@n.Quarter", "@n.StorageCapacity")' id="updatebtn"><span class="glyphicon glyphicon-eye-open"></span> Update</button></td>
                            </tr>
                            }

                        </tbody>
                    </table>
                </fieldset>
            </div>
        </div>

        <div style="display:none" class="loadingImage">
            <div id="load" style="width: 100%; height: 100%; top:0; left:0; position:fixed; display:block; opacity:0.7; background-color:#fff; z-index:99; text-align:center">
                <img id="loading-image" style="position:absolute; top:100px; left:50%; z-index:100" src="~/Images/spinning.gif" />
            </div>
        </div>

        <div id="modalMapDialog" style="display: none">
            <div id="MapContainer" style="height: 430px; width: 100%;border: 5px solid green;"></div>
        </div>

    </div>



    @section scripts{
        <script src="@Url.Content("~/Scripts/jquery.ui.widget.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.iframe-transport.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/select2.min.js")" type="text/javascript"></script>
        <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC2df9i_A809q2eQQizBb7UqSGXASsQHVQ&libraries=places"></script>
        <script src="@Url.Content("~/Scripts/jquery-ui.min.js")" type="text/javascript"></script>
        <link href="@Url.Content("~/Content/jquery-ui.css")" rel="stylesheet" />
        <script type="text/javascript">



            google.maps.event.addDomListener(window, 'load', function () {
                var options = {
                    componentRestrictions: { country: "ng" }
                };
                var places = new google.maps.places.Autocomplete(document.getElementById('Facaddress'), options);
                google.maps.event.addListener(places, 'place_changed', function () {
                    var place = places.getPlace();
                    var address = place.formatted_address;
                    var latitude = place.geometry.location.lat();
                    var longitude = place.geometry.location.lng();
                    var mesg = "Location Address Is : " + address;
                    mesg += "\nLocation Latitude Is : " + latitude;
                    mesg += "\nLocation Longitude Is: " + longitude;
                    showMap(address, latitude, longitude);
                });
            });


            function showMap(locationaddress, latitude, longitude) {
                var markers = [];

                $("#modalMapDialog").dialog({
                    modal: true,
                    title: "Address Location on Map",
                    width: 550,
                    hright: 400,
                    buttons: {
                        Close: function () {
                            $(this).dialog('close');
                        },
                        Okay: function () {
                            $("#Gps").val(latitude + ',' + longitude);
                            $(this).dialog('close');
                        }
                    },
                    open: function () {

                        google.maps.visualRefresh = true;
                        var myCenter = new google.maps.LatLng(latitude, longitude);
                        var mapCanvas = document.getElementById("MapContainer");
                        var mapOptions = {
                            center: myCenter,
                            zoom: 14,
                            mapTypeId: google.maps.MapTypeId.ROADMAP,
                            panControl: true,
                            zoomControl: true,
                            mapTypeControl: true,
                            scaleControl: true,
                            streetViewControl: true,
                            overviewMapControl: true,
                            rotateControl: true,
                            zoomControl: true,
                            zoomControlOptions: {
                                style: google.maps.ZoomControlStyle.SMALL
                            },
                            mapTypeControl: true,
                            mapTypeControlOptions: {
                                style: google.maps.MapTypeControlStyle.DROPDOWN_MENU,
                                position: google.maps.ControlPosition.TOP_CENTER,
                                mapTypeIds: [
                                    google.maps.MapTypeId.ROADMAP,
                                    google.maps.MapTypeId.TERRAIN,
                                    google.maps.MapTypeId.SATELLITE,
                                    google.maps.MapTypeId.HYBRID
                                ]
                            }
                        };

                        var map = new google.maps.Map(mapCanvas, mapOptions);
                        var marker = new google.maps.Marker({ position: myCenter, animation: google.maps.Animation.BOUNCE });
                        marker.setMap(map);

                        var infowindow = new google.maps.InfoWindow({
                            content: locationaddress
                        });
                        infowindow.open(map, marker);

                        // Zoom to 9 when clicking on marker
                        google.maps.event.addListener(marker, 'click', function () {
                            map.setZoom(13);
                            map.setCenter(marker.getPosition());
                        });
                    }
                });
            }


            $(function () {




                $("#facupdaterecord").click(function () {

                    var msg = confirm("Are you sure you want to update this record?");
                    $(".updaterecordmodal").modal("hide");
                    debugger;
                    var CompanyName = $("#CompanyName").val();
                    var ApplicationID = $("#ApplicationId").val();
                    var CompanyEmail = $("#CompanyEmail").val();
                    var FacilityName = $("#FacilityName").val();
                    var FacilityId = $("#FacilityId").val();
                    var GPS = $("#Gps").val();
                    var FacilityAddress = $("#Facaddress").val();
                    var annualStorageCapacity = $("#storagecapacity").val();
                    var StorageCapacity = $("#capacitystorage").val();
                    var Licenseexpirydate = $("#LicenseExpiryDate").val();
                    var issuancedate = $("#LicenseIssuedDate").val();
                    var currentstageid = $("#CurrentStageId").val();
                    var currentstaffdesk = $("#CurrentStaffDesk").val();
                    var LicenseRef = $("#LicenseReference").val();
                    var appcat = $("#Appcat").val();
                    var Lgacode = $("#LGACode").val();
                    var statecode = $("#StateCode").val();
                    var requestid = $("#apprequestid").val();
                    var Officelocationid = $("#CurrentOfficeLocationId").val();
                    var status = $("#status").val();
                    var Quarter = $("#quarter").val();
                    
                    if (msg === true) {
                        $(".loadingImage").show('fast');
                        $.post("/Admin/UpdateFacilityRecord", { "ApplicationId": ApplicationID, "Companyemail": CompanyEmail, "Companyname": CompanyName, "Facilityname": FacilityName, Facilityid: FacilityId, "FacAddress": FacilityAddress, "Gps": GPS, "AnnualStoragecapacity": annualStorageCapacity, expirydate: Licenseexpirydate, issuancedate: issuancedate, currentstageid: currentstageid, currentdesk: currentstaffdesk, "LicenseReference": LicenseRef, "LGACode": Lgacode, "StateCode": statecode, "Appcategory": appcat, "officelocationid": Officelocationid, applicationrequestId: requestid, "action": status, quarter: Quarter, "capacitystorage": StorageCapacity  }, function (res) {
                        if (res === "success") {
                            alert("Update was successful");
                           history.go(0);
                            $(".updaterecordmodal").modal("hide");
                            $(".loadingImage").hide('fast');
                        }
                        else {
                            alert("Something went wrong");
                            $(".loadingImage").hide('fast');
                        }
                    });
                        $(".loadingImage").hide('fast');
                    }
                    else {
                        return false;
                    }

                });

                $("#mytable").dataTable({
                    "aLengthMenu": [10, 25, 50, 75, 100, 200],
                    'iDisplayLength': 10,
                    columnDefs: [{ orderable: false, "targets": [0, -1] }],
                      "language": {
                        "lengthMenu": "Display  _MENU_ records",
                        "zeroRecords": "No record found",
                        "info": "Showing page _PAGE_ of _PAGES_",
                        "infoEmpty": "No Record to Display Currently",
                        "infoFiltered": "(filtered from _MAX_ total records)"
                    },
                    "order": [[1, "desc"]]
                });
            });

            function FacilityJs(ApplicationID, CompanyEmail, CompanyName, FacilityName, FacilityId, Appcodetype, FacAddress, GPSCordinates, AnnualStoragecapacity, Licenseexpirydate, Licenseissueddate, currentstaffdesk, currentstageid, LicenseReference, LGAcode, Statecode, APPcat, officelocationid, requestid, action, quarter, Storagecapacity) {
                $(".loadingImage").show('fast');
                var html = "";
                $("#CompanyName").val(CompanyName);
                $("#ApplicationId").val(ApplicationID);
                $("#CompanyEmail").val(CompanyEmail);
                $("#FacilityName").val(FacilityName);
                $("#FacilityId").val(FacilityId);
                $("#Facaddress").val(FacAddress);
                $("#Gps").val(GPSCordinates);
                $("#storagecapacity").val(AnnualStoragecapacity);
                $("#capacitystorage").val(Storagecapacity);
                $("#LicenseIssuedDate").val(Licenseissueddate);
                $("#LicenseExpiryDate").val(Licenseexpirydate);
                $("#CurrentStageId").val(currentstageid);
                $("#CurrentStaffDesk").val(currentstaffdesk);
                $("#LicenseReference").val(LicenseReference);
                $("#LGACode").val(LGAcode);
                $("#StateCode").val(Statecode);
                $("#Appcat").val(APPcat);
                $("#apprequestid").val(requestid);
                $("#CurrentOfficeLocationId").val(officelocationid);
                $("#status").val(action);
                quarter == "" ? $("#quarter").val(0) : $("#quarter").val(quarter);
                $(".updaterecordmodal").modal('show');
                $(".loadingImage").hide('fast');
            };

        </script>
    }
