@model IEnumerable<LOBP.DbEntities.SubmittedDocument>
@*@model IEnumerable<LOBP.Models.StaffReport>*@

@{
    ViewBag.Title = "Staff Report";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    LOBP.DbEntities.LubeBlendingDBEntities dbCtxt = new LOBP.DbEntities.LubeBlendingDBEntities();
    int count = 0;
}

    <div class="content">
        <div class="row">
            <form action="@Url.Action("SubmittedDocuments")" method="post">
                <div class="form-group">
                    <div class="col-md-3 ">
                        <label class="label">Search</label>
                        <input type="text" name="id" class="form-control" />
                    </div>
                </div>
                <div class="col-md-3 form-group">
                    <input type="submit" name="Submit" value="Filter" class="form-control btn btn-xs btn-primary" />
                </div>
            </form>
        </div>
        <hr class="clear" />
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-hover table-responsive table-bordered dataTable">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Doc Name</th>
                            <th>Url</th>
                            <th>Type</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var doc in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@doc.DocName</td>
                                <td>@doc.DocSource</td>
                                <td>@doc.BaseorTrans</td>
                                <td>
                                    <a href="#" class="btn btn-xs btn-info">Edit</a>
                                    <a href="@Url.Action("DeleteSubDocs", new { id = doc.SubmitedDocId })" class="btn btn-xs btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @section Scripts {
        <script type="text/javascript">
            $(document).ready(function () {

                var table = $(".dataTable").DataTable({
                    dom: 'Blfrtip',
                });                    
            });

        </script>
    }






















