@model List<LOBP.DbEntities.WorkFlowNavigation>

@{
    ViewBag.Title = "WorkFlow";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">



    @using (Html.BeginForm("AddWorkFlowRecord", "Admin", FormMethod.Post, new { @id = "formid" }))
    {
        @Html.AntiForgeryToken()
        <div class="modal fade addworkflowdmodal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="calenderModalLabel">
            <div class="modal-dialog modal" style="vertical-align: middle; margin:0 auto 0 30%; overflow-y:hidden; overflow-x:hidden; display:block; margin-top:50px" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title text-success" id="exampleModalLabel"><span class="glyphicon glyphicon-hand-down"></span> Add WorkFlow Record</h4>
                    </div>

                    <div class="modal-body">
                        <div class="form-horizontal">
                            <div class="row">
                                <div class="col-md-12">
                                    <input type="hidden" id="WorkFlowId" name="WorkFlowId" />
                                    <div class="col-sm-6">
                                        <label>Location Type</label>
                                        <div class="form-group">
                                            <div class="col-sm-10">
                                                <select class="form-control" id="txtLocationtype" required name="txtLocationtype">
                                                    <option></option>
                                                    <option value="FD">Field Office</option>
                                                    <option value="ZN">Zonal Office</option>
                                                    <option value="HQ">Head Office</option>
                                                </select>
                                            </div>
                                        </div>
                                        <label>Action</label>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <input type="text" id="txtAction" required name="txtAction" class="form-control" />
                                            </div>
                                        </div>

                                        <label>Action Role</label>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <input type="text" id="txtActionRole" required name="txtActionRole" class="form-control" />
                                            </div>
                                        </div>


                                        <label>Next StateID</label>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <input type="number" id="txtNextStateID" required name="txtNextStateID" class="form-control" />
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-sm-6">

                                        <label>Target Role</label>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <input type="text" id="txtTargetRole" required name="txtTargetRole" class="form-control" />
                                            </div>
                                        </div>

                                        <label>Current StageID</label>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <input type="number" id="txtCurrentStageID" required name="txtCurrentStageID" class="form-control" />
                                            </div>
                                        </div>


                                    </div>

                                </div>
                            </div>
                        </div>


                        <span style="margin-left:200px"> <button class="btn btn-success" id="workflowaddrecord" type="button"><span class="glyphicon glyphicon-plus-sign"></span> Add WorkFlow</button></span>

                    </div>

                </div>
            </div>
        </div>
    }






    <div class="modal fade updaterecordmodal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="calenderModalLabel">
        <div class="modal-dialog modal" style="vertical-align: middle; margin:0 auto 0 30%; overflow-y:hidden; overflow-x:hidden; display:block; margin-top:50px" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title text-success" id="exampleModalLabel"><span class="glyphicon glyphicon-hand-down"></span> Update WorkFlow Record</h4>
                </div>

                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12">

                                <div class="col-sm-6">
                                    <label>Location Type</label>
                                    <div class="form-group">
                                        <div class="col-sm-10">
                                            <select class="form-control" id="Locationtype" required name="Locationtype">
                                                <option></option>
                                                <option value="FD">Field Office</option>
                                                <option value="ZN">Zonal Office</option>
                                                <option value="HQ">Head Office</option>
                                            </select>
                                        </div>
                                    </div>


                                    <label>Action</label>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <input type="text" id="Action" name="Action" class="form-control" />
                                        </div>
                                    </div>

                                    <label>Action Role</label>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <input type="text" id="ActionRole" name="ActionRole" class="form-control" />
                                        </div>
                                    </div>


                                    <label>Next StateID</label>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <input type="number" id="NextStateID" name="NextStateID" class="form-control" />
                                        </div>
                                    </div>

                                </div>
                                <div class="col-sm-6">

                                    <label>Target Role</label>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <input type="text" id="TargetRole" name="TargetRole" class="form-control" />
                                        </div>
                                    </div>

                                    <label>Current StageID</label>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <input type="number" id="CurrentStageID" name="CurrentStageID" class="form-control" />
                                        </div>
                                    </div>

                                    <div><label class="control-label">Notify Action</label></div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <input type="text" id="NotifyAction" name="NotifyAction" value="NONE" class="form-control" />

                                        </div>
                                    </div>


                                </div>

                            </div>
                        </div>
                    </div>


                    <span style="margin-left:200px"> <button class="btn btn-success" id="workflowupdaterecord"><span class="glyphicon glyphicon-save"></span> Update Record</button></span>

                </div>

            </div>
        </div>
    </div>





    <div class="row">
        <div class="col-md-12" style="background-color:white">

            <fieldset class="scheduler-border">
                <legend class="scheduler-border">WorkFlow Information</legend>
                <button class="btn btn-xs btn-info" style="float:right" data-toggle="modal" data-target=".addworkflowdmodal"><span class="glyphicon glyphicon-plus"></span> Add WorkFlow</button>
                <br />
                <table class="table table-striped table-condensed table-responsive table-bordered customDT" id="mytable">
                    <thead>
                        <tr>
                            <th><strong>License Type</strong></th>
                            <th><strong>Location Type</strong></th>
                            <th><strong>Action</strong> </th>
                            <th><strong>Action Role</strong></th>
                            <th><strong>Current StageID</strong></th>
                            <th><strong>Next StateID</strong></th>
                            <th><strong>Target Role</strong></th>
                            <th><strong>Notify Action</strong></th>
                            <th style="width:2px"></th>
                            <th style="width:2px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(LOBP.DbEntities.WorkFlowNavigation n in Model)
                        {
                            <tr>
                                <td>@n.LicenseTypeId</td>
                                <td>@n.FieldLocationApply</td>
                                <td>@n.Action</td>
                                <td>@n.ActionRole</td>
                                <td>@n.CurrentStageID</td>
                                <td>@n.NextStateID</td>
                                <td>@n.TargetRole</td>
                                <td>@n.NotifyAction</td>
                                <td><button class="btn btn-success btn-xs" onclick="WorkFlowJs('@n.WorkFlowId','@n.FieldLocationApply', '@n.Action', '@n.ActionRole', '@n.CurrentStageID', '@n.NextStateID', '@n.TargetRole', '@n.NotifyAction')" id="updatebtn"><span class="glyphicon glyphicon-eye-open"></span> Update</button></td>
                                <td><button class="btn btn-danger btn-xs" onclick="DeleteWorkFlowJs('@n.WorkFlowId')" id="deletebtn"><span class="glyphicon glyphicon-trash"></span> Delete</button></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </fieldset>
        </div>
    </div>

    <div style="display:none" class="loadingImage">
        <div id="load" style="width: 100%; height: 100%; top:0; left:0; position:fixed; display:block; opacity:0.7; background-color:#fff; z-index:99; text-align:center">
            <img id="loading-image" style="position:absolute; top:100px; left:50%; z-index:100" src="~/Images/spinning.gif" />
        </div>
    </div>

    <div id="modalMapDialog" style="display: none">
        <div id="MapContainer" style="height: 430px; width: 100%;border: 5px solid green;"></div>
    </div>

</div>




@section scripts{

    <script type="text/javascript">

        $(function () {

            $("#workflowupdaterecord").click(function () {
                var msg = confirm("Are you sure you want to update this record?");
                $(".updaterecordmodal").modal("hide");
                debugger;
                var workFlowId = $("#WorkFlowId").val();
                var Locationtype = $("#Locationtype option:selected").val();
                var Action = $("#Action").val();
                var ActionRole = $("#ActionRole").val();
                var currentStageID = $("#CurrentStageID").val();
                var nextStateID = $("#NextStateID").val();
                var TargetRole = $("#TargetRole").val();
                var NotifyAction = $("#NotifyAction").val();

                if (msg === true) {
                    $(".loadingImage").show('fast');
                    $.post("/Admin/UpdateWorkFlowRecord", { WorkFlowId: workFlowId, "FieldLocationApply": Locationtype, "Action": Action, "ActionRole": ActionRole, CurrentStageID: currentStageID, NextStateID: nextStateID, "TargetRole": TargetRole, "NotifyAction": NotifyAction }, function (res) {
                        if (res === "success") {
                            alert("Update was successful");
                            $(".updaterecordmodal").modal("hide");
                            $(".loadingImage").hide('fast');
                            history.go(0);
                        }
                        else {
                            alert("Something went wrong");
                            $(".loadingImage").hide('fast');
                        }
                    });
                    $(".loadingImage").hide('fast');
                }
                else {
                    return false;
                }


            });



            $("#workflowaddrecord").click(function () {
                if ($("#formid").valid()) {
                    var msg = confirm("Are you sure you want to Add this record?");
                    var Locationtype = $("#txtLocationtype option:selected").val();
                    var Action = $("#txtAction").val();
                    var ActionRole = $("#txtActionRole").val();
                    var currentStageID = $("#txtCurrentStageID").val();
                    var nextStateID = $("#txtNextStateID").val();
                    var TargetRole = $("#txtTargetRole").val();
                    var NotifyAction = $("#txtNotifyAction").val();


                    if (msg === true) {
                        $(".loadingImage").show('fast');
                        $.post("/Admin/AddWorkFlowRecord", {"FieldLocationApply": Locationtype, "Action": Action, "ActionRole": ActionRole, CurrentStageID: currentStageID, NextStateID: nextStateID, "TargetRole": TargetRole, "NotifyAction": NotifyAction }, function (res) {
                            if (res === "success") {
                                alert("New record was successful");
                                $(".addworkflowdmodal").modal("hide");
                                $(".loadingImage").hide('fast');
                                history.go(0);
                            }
                            else {
                                alert("Something went wrong");
                                $(".loadingImage").hide('fast');
                            }
                        });
                        $(".loadingImage").hide('fast');
                    }
                    else {
                        return false;
                    }

                }

            });



            $("#mytable").dataTable({
                "aLengthMenu": [10, 25, 50, 75, 100, 200],
                'iDisplayLength': 10,
                columnDefs: [{ orderable: false, "targets": [0, -1] }],
                "language": {
                    "lengthMenu": "Display  _MENU_ records",
                    "zeroRecords": "No record found",
                    "info": "Showing page _PAGE_ of _PAGES_",
                    "infoEmpty": "No Record to Display Currently",
                    "infoFiltered": "(filtered from _MAX_ total records)"
                },
                "order": [[1, "desc"]]
            });
        });

        function WorkFlowJs(WorkFlowId,Location, Action, ActionRole, CurrentStageID, NextStateID, TargetRole, NotifyAction) {
            debugger;
            $(".loadingImage").show('fast');
            $("#WorkFlowId").val(WorkFlowId);
            $("#Locationtype").val(Location);
            $("#Action").val(Action);
            $("#ActionRole").val(ActionRole);
            $("#CurrentStageID").val(CurrentStageID);
            $("#NextStateID").val(NextStateID);
            $("#TargetRole").val(TargetRole);
            $("#NotifyAction").val(NotifyAction);
            $(".updaterecordmodal").modal('show');
            $(".loadingImage").hide('fast');
        };


        function DeleteWorkFlowJs(WorkFlowId) {
            var msg = confirm("Are sure you want to delete workflow?");
            if (msg === true) {
                $(".loadingImage").show('fast');
                $.post("/Admin/DeleteWorkFlow", { workFlowId: WorkFlowId }, function (res) {
                    if (res === "success") {
                        alert("workflow was successfully deleted");
                        $(".loadingImage").hide('fast');
                        history.go(0);
                    } else {
                        alert("something went wrong while trying to delete workflow");
                        $(".loadingImage").hide('fast');

                    }
                });
            }

        };


    </script>
}


