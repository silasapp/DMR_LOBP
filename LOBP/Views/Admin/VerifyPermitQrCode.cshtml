@model  LOBP.Models.Permitmodel
@{
    ViewData["Title"] = "Verify Permit QR Code";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body>


    <br />


    <div class="container">
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-danger alert-dismissable text-center" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign"></span>@ViewBag.Message
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        else
        {
            <div style="max-width:850px; border: 1px solid #ededed; padding:20px" class="text-left">

                <div class="alert-success" style="padding:20px">

                    <h5 class="text-success"><b>@Model.LicenseNumber Verified <span class="glyphicon glyphicon-ok"></span></b></h5>

                    <hr />

                    <div>
                        <p><b style="color:darkred">Permit Number : </b> @Model.LicenseNumber</p>
                        <hr />

                        <p><b style="color:darkred">Ref Number : </b> @Model.ApprefNo </p>
                        <p><b style="color:darkred">Storage Capacity : </b>@Model.Capacity</p>
                        <p><b style="color:darkred">Issued Date : </b> @Model.DateIssued</p>
                        <p><b style="color:darkred">Expiry Date : </b>@Model.Expiry</p>

                        <hr />

                        <p><b style="color:darkred">Company Identification Code : </b>@Model.CompanyIdentity </p>
                        <p><b style="color:darkred">Company Name : </b> @Model.CompanyName</p>
                        <p><b style="color:darkred">Company Address : </b> @Model.RegisteredAddress</p>
                        <p><b style="color:darkred">Facility Address : </b> @Model.LocationAddress</p>
                    </div>

                </div>

            </div>
        }
    </div>
</body>