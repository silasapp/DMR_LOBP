
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title text-danger">
            <span class="glyphicon glyphicon-hand-down"></span> Delete Document
        </h4>
    </div>

    <div class="modal-body">
        <form action="@Url.Action("DeleteDocument",new{ApplicationID=ViewBag.Appid, ApplicationDocType=ViewBag.AppType})" method="post" class="form-horizontal">
            @Html.AntiForgeryToken()
            <div class="text-danger">
                Are you sure you want to delete this document?
            </div>
            <input type="hidden" name="toDelId" id="toDelId" value="@ViewBag.fileId" />
            <div class="modal-footer">
                <input class="btn btn-danger" type="submit" value="Delete" name="Delete" id="Delete" />
                <button class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </form>
    </div>
