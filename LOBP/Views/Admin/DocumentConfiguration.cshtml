
@{
    ViewBag.Title = "DocumentConfiguration";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="content">



    <div class="modal fade adddocmodal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="calenderModalLabel">
        <div class="modal-dialog modal" style="vertical-align: middle; margin:0 auto 0 30%; overflow-y:hidden; overflow-x:hidden; display:block; margin-top:50px" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title text-success" id="exampleModalLabel"><span class="glyphicon glyphicon-hand-down"></span> Add Online Document</h4>
                </div>

                <div class="modal-body">
                    <div class="form-horizontal">

                        <div class="row">
                            <div class="col-md-12" style="margin-left:15px">
                                <label>Document Name</label>
                                <div class="form-group">
                                    <div class="col-md-10" style="width:87%">
                                        <select class="form-control multiselect-ui docname example-getting-started" id="docname" name="docname" multiple="multiple"></select>

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">

                                <div class="col-sm-6">
                                    <label>License/Approval Type</label>
                                    <div class="form-group">
                                        <div class="col-sm-10">
                                            <select class="form-control" id="LicenseTypeId" required name="LicenseTypeId">
                                                <option></option>
                                                <option value="SSA">SSA</option>
                                                <option value="PTE">PTE</option>
                                                <option value="ATC">ATC</option>
                                                <option value="LTO">LTO</option>
                                                <option value="ATCLFP">ATCLFP</option>
                                                <option value="ATM">ATM</option>
                                                <option value="ATO">ATO</option>
                                                <option value="INS">INS</option>
                                                <option value="LTOLFP">LTOLFP</option>
                                                <option value="TCA">TCA</option>
                                                <option value="TITA">TITA</option>
                                                <option value="TPBA-PLW">TPBA-PLW</option>
                                                <option value="TPBA-PRW">TPBA-PRW</option>
                                            </select>
                                        </div>
                                    </div>

                                    <label>Application Type</label>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <select class="form-control" id="ApplicationType" required name="ApplicationType">
                                                <option></option>
                                                <option value="NEW">NEW</option>
                                                <option value="RENEW">RENEW</option>
                                            </select>
                                        </div>
                                    </div>




                                    <label>Document ID</label>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <input type="number" id="docid" name="docid" required class="form-control" readonly />
                                            <input type="hidden" id="onlinedocselected" name="onlinedocselected" />
                                        </div>
                                    </div>

                                    <label>Serial Number</label>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <input type="number" required id="serialnum" name="serialnum" class="form-control" />
                                        </div>
                                    </div>


                                </div>
                                <div class="col-sm-6">

                                    <label>Facility/Company Document</label>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <select class="form-control" required id="IsbaseTrans" name="IsbaseTrans">
                                                <option></option>
                                                <option value="T">Facility</option>
                                                <option value="B">Company</option>
                                            </select>
                                        </div>
                                    </div>

                                    <label>Mandatory</label>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <select class="form-control" required id="Ismandatory" name="Ismandatory">
                                                <option></option>
                                                <option value="Y">YES</option>
                                                <option value="N">NO</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div><label class="control-label">License Document</label></div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <select class="form-control" required id="Islicensedoc" name="Islicensedoc">
                                                <option></option>
                                                <option value="Y">YES</option>
                                                <option value="N">NO</option>
                                            </select>
                                        </div>
                                    </div>

                                    <label>Status</label>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <input type="text" id="status" required name="status" value="ACTIVE" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <span style="margin-left:200px"> <button class="btn btn-success" id="adddoc"><span class="glyphicon glyphicon-plus"></span> ADD DOCUMENT</button></span>

                </div>

            </div>
        </div>
    </div>




    <br /><br />

    <div class="modal fade addlegacydocmodal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="calenderModalLabel">
        <div class="modal-dialog modal" style="vertical-align: middle; margin:0 auto 0 30%; overflow-y:hidden; overflow-x:hidden; display:block; margin-top:50px" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title text-success" id="exampleModalLabel"><span class="glyphicon glyphicon-hand-down"></span> Add Legacy Document</h4>
                </div>

                <div class="modal-body">
                    <div class="form-horizontal">

                        <div class="row">
                            <div class="col-md-12" style="margin-left:15px">
                                <label>Document Name</label>
                                <div class="form-group">
                                    <div class="col-md-10" style="width:87%">
                                        <select class="form-control multiselect-ui legacydocname example-getting-started" id="legacydocname" name="legacydocname" multiple="multiple"></select>

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">

                                <div class="col-sm-6">
                                    <label>License/Approval Type</label>
                                    <div class="form-group">
                                        <div class="col-sm-10">
                                            <select class="form-control" id="legacyLicenseTypeId" required name="legacyLicenseTypeId">
                                                <option></option>
                                                <option value="SSA">SSA</option>
                                                <option value="PTE">PTE</option>
                                                <option value="ATC">ATC</option>
                                                <option value="LTO">LTO</option>
                                                <option value="ATCLFP">ATCLFP</option>
                                            </select>
                                        </div>
                                    </div>

                                   


                                    <label>Document ID</label>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <input type="number" id="legacydocid" name="legacydocid" required class="form-control" readonly />
                                            <input type="hidden" id="legacydocselected" name="legacydocselected" />
                                        </div>
                                    </div>

                                    <label>Serial Number</label>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <input type="number" required id="legacyserialnum" name="legacyserialnum" class="form-control" />
                                        </div>
                                    </div>


                                </div>
                                <div class="col-sm-6">

                                    <label>Facility/Company Document</label>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <select class="form-control" required id="legacyIsbaseTrans" name="legacyIsbaseTrans">
                                                <option></option>
                                                <option value="T">Facility</option>
                                                <option value="B">Company</option>
                                            </select>
                                        </div>
                                    </div>

                                    <label>Mandatory</label>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <select class="form-control" required id="legacyIsmandatory" name="legacyIsmandatory">
                                                <option></option>
                                                <option value="Y">YES</option>
                                                <option value="N">NO</option>
                                            </select>
                                        </div>
                                    </div>


                                    <label>Status</label>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <input type="text" id="legacystatus" required name="legacystatus" value="ACTIVE" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <span style="margin-left:200px"> <button class="btn btn-success" id="addlegacydoc"><span class="glyphicon glyphicon-plus"></span> ADD DOCUMENT</button></span>

                </div>

            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12" style="background-color:white">
            <fieldset class="scheduler-border">
                <legend class="scheduler-border">Online Document Configuration</legend>
                <div style="float:right" id="showonlinedocform" class="btn btn-success"><i class="fa fa-plus"> Add Online Document</i></div><br /><br />
                <table class="table table-striped table-condensed table-responsive table-bordered customDT" id="mytable">
                    <thead>
                        <tr>
                            <th><strong>License/Approval Type</strong>
                            <th><strong>Application Type</strong></th>
                            <th><strong>Document ID</strong></th>
                            <th><strong>Document Name</strong></th>
                            <th><strong>Serial Number</strong></th>
                            <th><strong>Facility/Company Document</strong></th>
                            <th><strong>Manadatory</strong></th>
                            <th><strong>License Document</strong></th>
                            <th><strong>Status</strong></th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (LOBP.DbEntities.RequiredLicenseDocument n in ViewBag.AllRequiredDoc)
                        {
                        <tr>
                            <td>@n.LicenseTypeId</td>
                            <td>@n.ApplicationTypeId</td>
                            <td>@n.TypeID</td>
                            <td>@n.Description</td>
                            <td>@n.SeqNo</td>
                            <td>
                                @if (n.IsBaseTran == "T")
                                {<span>Facility</span> }
                                else
                                { <span>Company</span>}
                            </td>
                            <td>
                                @if (n.IsMandatory == "Y")
                                {<span>YES</span> }
                                else
                                {<span>NO</span>}
                            </td>
                            <td>
                                @if (n.IsLicenseDoc == "Y")
                                {<span>YES</span> }
                                else
                                {<span>NO</span>}
                            </td>

                            <td>@n.Status</td>
                            <td><button class="btn btn-danger btn-xs" onclick="DeleteJs('@n.LicenseTypeId', '@n.ApplicationTypeId', '@n.TypeID')" id="deletelegacybtn"><span class="glyphicon glyphicon-trash"></span> Delete</button></td>
                        </tr>
                        }

                    </tbody>
                </table>
            </fieldset>
        </div>
    </div>







    <div class="row">
        <div class="col-md-12" style="background-color:white">
            <fieldset class="scheduler-border">
                <legend class="scheduler-border">Legacy Document Configuration</legend>
                <div style="float:right" id="showlegacydocform" class="btn btn-success"><i class="fa fa-plus"> Add Legacy Document</i></div><br /><br />
                <table class="table table-striped table-condensed table-responsive table-bordered legacycustomDT" id="mylegacytable">
                    <thead>
                        <tr>
                            <th><strong>License/Approval Type</strong>
                            <th><strong>Document ID</strong></th>
                            <th><strong>Document Name</strong></th>
                            <th><strong>Serial Number</strong></th>
                            <th><strong>Facility/Company Document</strong></th>
                            <th><strong>Manadatory</strong></th>
                            <th><strong>Status</strong></th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (LOBP.DbEntities.LegacyDocument n in ViewBag.AllLegacyDoc)
                        {
                            <tr>
                                <td>@n.LicenseTypeCode</td>
                                <td>@n.TypeID</td>
                                <td>@n.Description</td>
                                <td>@n.SeqNo</td>
                                <td>
                                    @if (n.IsBaseTran == "T")
                                    {<span>Facility</span> }
                                    else
                                    { <span>Company</span>}
                                </td>
                                <td>
                                    @if (n.IsMandatory == "Y")
                                    {<span>YES</span> }
                                    else
                                    {<span>NO</span>}
                                </td>

                                <td>@n.Status</td>
                                <td><button class="btn btn-danger btn-xs" onclick="DeleteLegacyDocJs('@n.LicenseTypeCode', '@n.TypeID')" id="deletelegacybtn"><span class="glyphicon glyphicon-trash"></span> Delete</button></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </fieldset>
        </div>
    </div>

    <div style="display:none" class="loadingImage">
        <div id="load" style="width: 100%; height: 100%; top:0; left:0; position:fixed; display:block; opacity:0.7; background-color:#fff; z-index:99; text-align:center">
            <img id="loading-image" style="position:absolute; top:100px; left:50%; z-index:100" src="~/Images/spinning.gif" />
        </div>
    </div>


</div>



@section scripts{
   
    <script type="text/javascript">
        $(function () {


            $("#showonlinedocform").click(function () {
                $(".adddocmodal").modal("show");
            });

            $("#showlegacydocform").click(function () {
                $(".addlegacydocmodal").modal("show");
            });

            $("#adddoc").click(function () {

                $(".adddocmodal").modal("hide");
                debugger;
                var LicenseTypeId = $("#LicenseTypeId option:selected").val();
                var ApplicationType = $("#ApplicationType option:selected").val();
                var docid = $("#docid").val();
                var docname = $("#onlinedocselected").val();
                var serialnum = $("#serialnum").val();
                var IsbaseTrans = $("#IsbaseTrans option:selected").val();
                var Ismandatory = $("#Ismandatory option:selected").val();
                var Islicensedoc = $("#Islicensedoc option:selected").val();
                var status = $("#status").val();
                if (LicenseTypeId === "" || ApplicationType === "" || docid === "" || docname === "" || serialnum === "" || IsbaseTrans === "" || Ismandatory === "" || Islicensedoc === "" || status === "") {
                    alert("One of the field is empty");
                } else {
                    var msg = confirm("Are you sure you want to add document?");
                    if (msg === true) {
                        $(".loadingImage").show('fast');
                        $.post("/Admin/AddOnlineDocument", { "LicenseTypeId": LicenseTypeId, "ApplicationType": ApplicationType, Docid: docid, "docname": docname, Serialnum: serialnum, "IsbaseTrans": IsbaseTrans, "Ismandatory": Ismandatory, "Islicensedoc": Islicensedoc, "status": status }, function (res) {
                            if (res === "success") {
                                $(".loadingImage").hide('fast');
                                alert("Document was successfully added");
                                history.go(0);
                                $(".adddocmodal").modal("hide");
                            } else if (res === "existing") {
                                $(".loadingImage").hide('fast');
                                alert("Document already exist");

                            }
                            else {
                                $(".loadingImage").hide('fast');
                                alert("Something went wrong");
                            }
                        });
                        $(".loadingImage").hide('fast');
                    }
                    else {
                        return false;
                    }
                }
            });






            $("#addlegacydoc").click(function () {

                $(".addlegacydocmodal").modal("hide");
                debugger;
                var LicenseTypeId = $("#legacyLicenseTypeId option:selected").val();
                var docid = $("#legacydocid").val();
                var docname = $("#legacydocselected").val();
                var serialnum = $("#legacyserialnum").val();
                var IsbaseTrans = $("#legacyIsbaseTrans option:selected").val();
                var Ismandatory = $("#legacyIsmandatory option:selected").val();
                var status = $("#legacystatus").val();
                if (LicenseTypeId === "" || docid === "" || docname === "" || serialnum === "" || IsbaseTrans === "" || Ismandatory === "" || status === "") {
                    alert("One of the field is empty");
                } else {
                    var msg = confirm("Are you sure you want to add document?");
                    if (msg === true) {
                        $(".loadingImage").show('fast');
                        $.post("/Admin/AddLegacyDocument", { "LicenseTypeId": LicenseTypeId, Docid: docid, "docname": docname, Serialnum: serialnum, "IsbaseTrans": IsbaseTrans, "Ismandatory": Ismandatory, "status": status }, function (res) {
                            if (res === "success") {
                                $(".loadingImage").hide('fast');
                                alert("Document was successfully added");
                                history.go(0);
                                $(".addlegacydocmodal").modal("hide");
                            } else if (res === "existing") {
                                $(".loadingImage").hide('fast');
                                alert("Document already exist");

                            }
                            else {
                                alert("Something went wrong");
                                $(".loadingImage").hide('fast');
                            }
                        });
                        $(".loadingImage").hide('fast');
                    }
                    else {
                        return false;
                    }
                }

            });







            $("#mytable").dataTable({
                "aLengthMenu": [10, 25, 50, 75, 100, 200],
                'iDisplayLength': 10,
                columnDefs: [{ orderable: false, "targets": [0, -1] }],
                "language": {
                    "lengthMenu": "Display  _MENU_ records",
                    "zeroRecords": "No record found",
                    "info": "Showing page _PAGE_ of _PAGES_",
                    "infoEmpty": "No Record to Display Currently",
                    "infoFiltered": "(filtered from _MAX_ total records)"
                },
                "order": [[1, "desc"]]
            });

            $("#mylegacytable").dataTable({
                "aLengthMenu": [10, 25, 50, 75, 100, 200],
                'iDisplayLength': 10,
                columnDefs: [{ orderable: false, "targets": [0, -1] }],
                "language": {
                    "lengthMenu": "Display  _MENU_ records",
                    "zeroRecords": "No record found",
                    "info": "Showing page _PAGE_ of _PAGES_",
                    "infoEmpty": "No Record to Display Currently",
                    "infoFiltered": "(filtered from _MAX_ total records)"
                },
                "order": [[1, "desc"]]
            });


            $(".docname").ready(function () {//get all Document names populated in the dropdownlist
                $.getJSON("/Admin/GetAllElpsDocTypes",
                    {},
                    function (datas) {
                        $.each(datas,
                            function (key, val) {
                                $(".docname").append('<option value="' + val.docid + '">' + val.docname +'</option>');

                            });
                    });
            });

            $('.docname').select2({
                placeholder: "Select",
                width: '100%'
            });


            $('.docname').on('change', function () {
                debugger;
                var datatext = $(".docname option:selected").text();
                var datavalue = $(".docname").select2("val");
                $("#onlinedocselected").val(datatext);
                $("#docid").val(datavalue);
            })



            $(".legacydocname").ready(function () {//get all Document names populated in the dropdownlist
                $.getJSON("/Admin/GetAllElpsDocTypes",
                    {},
                    function (datas) {
                        $.each(datas,
                            function (key, val) {
                                $(".legacydocname").append('<option value="' + val.docid + '">' + val.docname + '</option>');

                            });
                    });
            });

            $('.legacydocname').select2({
                placeholder: "Select",
                width: '100%'
            });


            $('.legacydocname').on('change', function () {
                debugger;
                var datatext = $(".legacydocname option:selected").text();
                var datavalue = $(".legacydocname").select2("val");
                $("#legacydocselected").val(datatext);
                $("#legacydocid").val(datavalue);
            })


        });

        function DeleteJs(LicenseTypeId, ApplicationTypeId, DocID) {
            debugger;
            var msg = confirm("Are you sure you want to delete document?");

            if (msg === true) {
                $(".loadingImage").show();
                $.post("/Admin/DeleteOnlineDocument", { "LicenseTypeId": LicenseTypeId, "ApplicationTypeId": ApplicationTypeId, docID: DocID}, function (res) {
                    if (res === "success") {
                        alert("Document was deleted successfully");
                        history.go(0);
                        $(".loadingImage").hide('fast');
                    }
                    else {
                        alert("Something went wrong");
                        $(".loadingImage").hide('fast');
                    }
                });
                $(".loadingImage").hide('fast');
            }
            else {
                return false;
            }
            }


        function DeleteLegacyDocJs(LicenseTypeId, DocID) {
            debugger;
            var msg = confirm("Are you sure you want to delete Legacy document?");

            if (msg === true) {
                $(".loadingImage").show();
                $.post("/Admin/DeleteLegacyDocument", { "LicenseTypeId": LicenseTypeId, docID: DocID }, function (res) {
                    if (res === "success") {
                        alert("Legacy document was deleted successfully");
                        history.go(0);
                        $(".loadingImage").hide('fast');
                    }
                    else {
                        alert("Something went wrong");
                        $(".loadingImage").hide('fast');
                    }
                });
                $(".loadingImage").hide('fast');
            }
            else {
                return false;
            }
        }

        

    </script>
}

